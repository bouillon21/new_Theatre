<UserControl x:Class="new_Theatre.Views.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:new_Theatre.Views"
             mc:Ignorable="d" 
             MinHeight="369"
             MinWidth="792"
             Height="auto"
             Width="auto" >
    <Grid Background="#79BDA5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="250"/>
            <RowDefinition Height="Auto" MinHeight="100" />

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="50"/>
                    <RowDefinition Height="*" MinHeight="50"/>
                    <RowDefinition Height="*" MinHeight="50"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Login" Foreground="Black" />
                <Label Grid.Row="1" Grid.Column="0" Content="Password" Foreground="Black"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Phone" Foreground="Black"/>
                <Label Grid.Row="0" Grid.Column="2" Content="First Name" Foreground="Black"/>
                <Label Grid.Row="1" Grid.Column="2" Content="Name" Foreground="Black"/>
                <Label Grid.Row="2" Grid.Column="2" Content="Last Name" Foreground="Black"/>
                <TextBox x:Name="Login" Grid.Row="0" Grid.Column="1"/>
                <PasswordBox x:Name="Password" Grid.Row="1" Grid.Column="1"/>
                <TextBox x:Name="Phone" Grid.Row="2" Grid.Column="1"/>
                <TextBox Grid.Row="0" Grid.Column="3"/>
                <TextBox Grid.Row="1" Grid.Column="3"/>
                <TextBox Grid.Row="2" Grid.Column="3"/>
                
                <Label Grid.Row="1" Grid.Column="4" Content="Admin" Foreground="Black"/>
                <CheckBox x:Name="Admin" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Grid.Row="1" Content="Зарегистрироваться" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
